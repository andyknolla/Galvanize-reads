<div class="container section">
    <div class="row">
        <div class="col s2">
            <img class="book_detail" src="{{book.cover_image}}" alt="" />
        </div>
        <div class="book_info col s8 offset-s3">
            <h3>{{book.title}}</h3>
            <p>Genre: {{book.genre}}</p>
            <p>By: </p>
            {{#each authors}}
                <a href="../../authors/author_detail/{{this.authorId}}">{{this.first_name}} {{this.last_name}}, </a>
            {{/each}}
            <p>{{book.description}}</p>
            <a href="/books/delete_book/{{book.id}}">Delete</a>
            <a href="/books/edit_book/{{book.id}}">Edit</a>
        </div>
    </div>
</div>

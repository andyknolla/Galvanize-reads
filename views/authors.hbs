<div class="section">
    <div class="container section">
        {{#each authors}}
            <div class="row">
                <div class="col s2">
                    <img class="author_pic" src="{{this.portrait}}" alt="" />
                </div>
                <div class="author_info col s7 offset-s2">
                    <h3>{{this.first_name}} {{this.last_name}}</h3>
                    <p>{{this.bio}}</p>
                    <a href="/authors/delete_author/{{this.id}}">Delete</a>
                    <a href="/authors/edit_author/{{this.id}}">Edit</a>
                </div>
            </div>
        {{/each}}
    </div>

    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Add an Author</a>

    <!-- Modal Structure -->
    <div id="modal1" class="modal">
        <div class="modal-content">
            <h3>Add an Author</h3>
            <form id='add_author' class="" action="/authors/add_author" method="post">
                <div class='input-field'>
                    <label for='first_name'>First Name</label>
                    <input type="text" id='first_name' name="first_name">
                </div>
                <div class='input-field'>
                    <label for="last_name">Last Name</label>
                    <input type="text" id='last_name' name="last_name">
                </div>
                <div class="input-field">
                    <label for="portrait">Portrait URL</label>
                    <input type="text" id="portrait" name="portrait">
                </div>
                <div class="input-field">
                    <label for="bio">Author Bio</label>
                    <textarea id="bio" name="bio" rows="8" cols="40"></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn waves-effect waves-light" form="add_author" type="submit">submit<i class="material-icons right">send</i></button>
        </div>
    </div>
</div>

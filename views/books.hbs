<div class="container title-button brown-text darken-4">
    <h2>Books</h2>
    <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Add a Book</a>
</div>
<div class='container'>
    <div class='row'>
        {{#each books}}
            <div id='book-card' class="card large col m3">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="{{this.cover_image}}">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{this.title}}<i class="material-icons right">more_vert</i></span>
                    <p><a class="waves-effect waves-light btn" href="/books/book_detail/{{this.id}}">Book details</a></p>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{this.title}}<i class="material-icons right">close</i></span>
                    <p><a class="waves-effect waves-light btn" href="/books/delete_book/{{this.id}}">Delete</a></p>
                    <p><a class="waves-effect waves-light btn" href="/books/edit_book/{{this.id}}">Edit</a></p>
                    <p><a class="waves-effect waves-light btn" href="/books/book_detail/{{this.id}}">Book details</a></p>
                    <p>Genre: {{this.genre}}</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<div class="container">
    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Add a Book</a>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h3>Add a Book</h3>
        <form id='add_book' class="" action="/books/add_book" method="POST">
            <div class='input-field'>
                <label for='title'>Title</label>
                <input type="text" id='title' name="title" value="">
            </div>
            <div class='input-field'>
                <label for="genre">Genre</label>
                <input type="text" id='genre' name="genre" value="">
            </div>
            <div class="input-field">
                <label for="cover_image">Portrait URL</label>
                <input type="url" id="cover_image" name="cover_image" value="">
            </div>
            <div class="input-field">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="8" cols="40"></textarea>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn waves-effect waves-light" form="add_book" type="submit">submit<i class="material-icons right">send</i></button>
    </div>
</div>


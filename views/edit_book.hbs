<div class="container">
    <h3>Edit {{book.title}}</h3>
    <form id='add_books' class="col s12" action="/books/edit_book/{{book.id}}" method="POST">
        <input type="hidden" name="id" value="{{book.id}}">
        <div class="row">
            <div class='input-field col s6'>
                <label for='title'>Title</label>
                <input type="text" id='title' name="title" value="{{book.title}}">
            </div>
            <div class='input-field col s6'>
                <label for="genre">Genre</label>
                <input type="text" id='genre' name="genre" value="{{book.genre}}">
            </div>

        </div>
        <div class="input-field col s6">
            <label for="cover_image">Portrait URL</label>
            <input type="url" id="cover_image" name="cover_image" value="{{book.cover_image}}">
        </div>
        <div class="input-field col s6">
            <label for="description">Description</label>
            <textarea id="description" class="materialize-textarea" name="description" rows="8" cols="40">{{book.description}}</textarea>
        </div>
        <input class="btn waves-effect waves-light" type="submit"></input>
    </form>
</div>

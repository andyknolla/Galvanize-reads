<div class="container">
    <h3>Edit {{author.title}}</h3>
    <form id='edit_book' class="col s12" action="/authors/edit_author/{{author.id}}" method="POST">
        <input type="hidden" name="id" value="{{author.id}}">
        <div class="row">
            <div class='input-field col s6'>
                <label for='title'>Title</label>
                <input type="text" id='first_name' name="first_name" value="{{author.first_name}}">
            </div>
            <div class='input-field col s6'>
                <label for="last_name">Last Name</label>
                <input type="text" id='last_name' name="last_name" value="{{author.last_name}}">
            </div>

        </div>
        <div class="input-field col s6">
            <label for="portrait">Portrait URL</label>
            <input type="url" id="portrait" name="portrait" value="{{author.portrait}}">
        </div>
        <div class="input-field col s6">
            <label for="bio">Bio</label>
            <textarea id="bio" class="materialize-textarea" name="bio" rows="8" cols="40">{{author.bio}}</textarea>
        </div>
        <input class="btn waves-effect waves-light" type="submit"></input>
    </form>
</div>
